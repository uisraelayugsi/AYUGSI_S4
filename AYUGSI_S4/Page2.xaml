<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AYUGSI_S4.Page2" >
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="buttonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Blue" />
                <Setter Property="TextColor" Value="Red" />


            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        
        <StackLayout>
            <Label x:Name="lblUsuario" FontSize="14" TextColor="Red"  HorizontalTextAlignment="End"/>
            <Label Text="VENTANA DOS " FontSize="24"   HorizontalTextAlignment="Center"/>

           <Entry x:Name="txtDato"  Keyboard="Numeric" Placeholder="datos del 1 al 100 " TextChanged="txtDato_TextChanged"/>
            <Picker x:Name="pkAlumnos"  Title="Alumnos">
                <Picker.Items>
                    <x:String>ALEX YUGSI</x:String>
                    <x:String>MARCO VELE</x:String>
                    <x:String>SEBASTIAN GONZALES</x:String>
                </Picker.Items>
            </Picker>

            <Button x:Name="btnAbrir" Text="ABRIR VENTANA 3" Clicked="btnAbrir_Clicked" Style="{StaticResource buttonStyle}" />




        </StackLayout>
    </ContentPage.Content>
</ContentPage>